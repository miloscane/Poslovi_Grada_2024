					}
					if(!isNaN(parseFloat(izvestaji[i].kazna))){
						kazne = kazne + parseFloat(izvestaji[i].kazna);

					}
				}
				setScales(ostvarenUcinak,kazne - nagrade+penaliStrukture)
				//setScales(1800000*0.74,nagrade - kazne)


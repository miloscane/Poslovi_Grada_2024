						}
						
						
						
						for(var j=0;j<zamene;j++){
							var skalaItem = document.createElement("DIV");
							skalaItem.setAttribute("class","skalaItem zamena");
							skalaItem.innerHTML = "Z";
							skalaOdradjeno.appendChild(skalaItem);
						}

						for(var j=0;j<odgusenja;j++){
							var skalaItem = document.createElement("DIV");
							skalaItem.setAttribute("class","skalaItem odgusenje");
							skalaItem.innerHTML = "O";
							skalaOdradjeno.appendChild(skalaItem);
						}

						for(var j=0;j<konstatacije;j++){
							var skalaItem = document.createElement("DIV");
							skalaItem.setAttribute("class","skalaItem konstatacija");
							skalaItem.innerHTML = "K";
							skalaOdradjeno.appendChild(skalaItem);

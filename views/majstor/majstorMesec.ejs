							if(izvestaj.nalozi[j].tipoviRada[k]=="Замена"){
								zamene++;
							}else if(izvestaj.nalozi[j].tipoviRada[k]=="Одгушење"){
								odgusenja++;
							}else if(["Попис","Констатација"].indexOf(izvestaj.nalozi[j].tipoviRada[k])>=0){

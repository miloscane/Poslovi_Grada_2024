						var ucinakTemp = isNaN(parseFloat(izvestaji[i].nalozi[j].ucinak.replace(",", "."))) ? 0 : parseFloat(izvestaji[i].nalozi[j].ucinak.replace(",", "."));
						
						if((izvestaji[i].nalozi[j].tipoviRada.indexOf("Одгушење")>=0 || izvestaji[i].nalozi[j].tipoviRada.indexOf("Црпљење")>=0) && izvestaji[i].nalozi[j].tipoviRada.indexOf("Замена")<0){
							ucinakTemp = ucinakTemp*0.74;
						}
						ostvarenUcinak = ostvarenUcinak + ucinakTemp;
					}
					if(izvestaji[i].odsustvo=="Присутан"){
						var ostvarenaStruktura = zamene*vrednostZamene + odgusenja*vrednostOdgusenja + konstatacije*vrednostKonstatacije;
						penaliStrukture = penaliStrukture + Math.max(0,potrebnaVrednost - ostvarenaStruktura)*penalPoPoenu;	
					}
					
				}
				var nagrade = 0;
				var kazne = 0;
				var radniDani = 0;
				var nalozi = 0;
				for(var i=0;i<izvestaji.length;i++){

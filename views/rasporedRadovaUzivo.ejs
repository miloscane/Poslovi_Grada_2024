		var START_H = 7
		var START_M = 0;   // 07:00
		var END_H   = 21;
		var END_M   = 0;  // 20:00
		var STEP_MIN = 30; 
		var hour = START_H;
		var minute = START_M;
		var times = [];
		while (hour < END_H || (hour === END_H && minute === END_M)) {
		    const h = String(hour).padStart(2,'0');
